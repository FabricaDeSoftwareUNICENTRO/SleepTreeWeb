<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
    <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
    <property name="hibernate.connection.username">postgres</property>
    <property name="hibernate.connection.password">lipolisa</property>
    <property name="hibernate.connection.url">
jdbc:postgresql://localhost:5432/sleeptreedb</property>
    <property name="connection_pool_size">1</property>
    <property name="hbm2ddl.auto">update</property>
    <property name="show_sql">true</property>
    <mapping class="com.sprhib.model.Area"/>
    <mapping class="com.sprhib.model.Temperatura"/>
    <mapping class="com.sprhib.model.Tipo"/>
    <mapping class="com.sprhib.model.Unidade"/>
    <mapping class="com.sprhib.model.Usuario"/>
  </session-factory>
</hibernate-configuration>
