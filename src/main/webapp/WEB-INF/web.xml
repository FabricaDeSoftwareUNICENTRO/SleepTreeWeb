<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ControllerUsuario2</servlet-name>
        <servlet-class>com.sprhib.controller.ControllerUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.sprhib.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.sprhib.controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControleLogado</servlet-name>
        <servlet-class>com.sprhib.controller.ControleLogado</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerTemperatura</servlet-name>
        <servlet-class>com.sprhib.controller.ControllerTemperatura</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControllerUsuario2</servlet-name>
        <url-pattern>/ControllerUsuario2</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControleLogado</servlet-name>
        <url-pattern>/ControleLogado</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerTemperatura</servlet-name>
        <url-pattern>/ControllerTemperatura</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
